{
  "version": 2,
  "builds": [
      {
          "src": "public/**/*",
          "use": "@vercel/static"
      }
  ],
  "routes": [
      {
          "src": "/(.*)",
          "dest": "/public/$1"
      }
  ],
  "headers": [
      {
          "source": "/(.*)",
          "headers": [
              {
                  "key": "Cache-Control",
                  "value": "no-store, must-revalidate"
              },
              {
                  "key": "X-Content-Type-Options",
                  "value": "nosniff"
              }
          ]
      }
  ]
}
